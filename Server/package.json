  "scripts": {
    "dev": "nodemon --exec \"node -r dotenv/config src/index.js\"",
    "start": "cross-env NODE_ENV=production node -r dotenv/config src/index.js",
    "start:clean": "node scripts/kill-port.js 5001 && cross-env NODE_ENV=production node -r dotenv/config src/index.js",
    "start:prod": "cross-env NODE_ENV=production node -r dotenv/config src/index.js",
    "validate:env": "node -r dotenv/config scripts/validate-env.js",
    "prestart": "npm run validate:env || true",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:api": "node -r dotenv/config test-api-endpoints.js",
    "test:categories": "node -r dotenv/config test-project-categories.js",
    "test:contributions": "node -r dotenv/config test-contribution-basic.js",
    "test:all": "npm run test:api && npm run test:categories && npm run test:contributions",
    "kill-port": "node scripts/kill-port.js",
    "kill-port:5000": "node scripts/kill-port.js 5000",
    "kill-port:5001": "node scripts/kill-port.js 5001",
    "grant-admin": "node -r dotenv/config scripts/grant-admin-role.js"
  },
